pragma solidity ^0.8.20;

contract ARUNToken {
    address public owner;
    uint public TotalAmount;
    mapping (address => uint) public balances;
    //allowances:
    mapping (address => mapping (address =>uint)) public allowances;

    constructor(){
        owner = msg.sender;
    }

    modifier onlyowner(){
        require(owner == msg.sender);
        _;
    }

    event burn(uint _amount);

    function approve(address _spender, uint256 _value) public returns (bool success){
        allowances[msg.sender][_spender] = _value;
        return true;
    }

    function transferFrom(address _from, address _to, uint256 _value) public returns (bool success){
        uint allow = allowances[_from][msg.sender];
        require(allow >= _value);

        uint balance = balances[_from];
        require(balance >= _value);
        balances[_from] -= _value;
        balances[_to] += _value;
        allow -= _value;

        return true;
    }


    function mint(uint _amount) public onlyowner{
        balances[owner] += _amount;
        TotalAmount += _amount;
    }

    function mintTo(address _to,uint _amount)public onlyowner{
        balances[_to] += _amount;
        TotalAmount += _amount;
    }

    function Transfer(address _to, uint amount)public{
        uint existingamount = balances[msg.sender];
        require(existingamount >= amount);
        balances[msg.sender] -= amount;
        balances[_to] += amount;
    }

    function BurnTokens(uint _amount)public{
        require(balances[msg.sender] >= _amount,"you dont have enough balance");
        balances[msg.sender] -= _amount;
        uint totalSupply = TotalAmount;
        totalSupply -= _amount;
        emit burn(_amount);
    }
}